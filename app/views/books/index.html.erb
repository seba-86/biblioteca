<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead >  
    <tr class="header p-3 mb-2 bg-secondary text-white">
      <th class="">Title</th>
      <th class="p-2">Author</th>
      <th class="p-2">Status</th>
      <th class="p-2">Prestado</th>
      <th class="p-2">Devuelto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr class="text-center ">
        <td class="font-weight-bold"> <%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.status %></td>
        <td><%= book.date_prestado %></td>
        <td><%= book.date_devuelto %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

